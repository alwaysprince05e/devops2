pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/alwaysprince05e/devops'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'mvn clean package'  
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test' 
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                sh './deploy.sh'  
            }
        }
    }
}
